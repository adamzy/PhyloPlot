doctype html
html
    head
        meta(charset='utf-8')
        link(href='../css/bootstrap.min.css',rel="stylesheet",type="text/css")
        // link(href='http://fonts.googleapis.com/css?family=Fondamento|Monda|Strait|Source+Sans+Pro|Alegreya|Poiret+One',rel='stylesheet',type='text/css')
        link(href='../css/basic.css',rel="stylesheet",type="text/css")
        title PhyloPlot
        style.
            .container{width:90%}

    body
        .page-header.text-center
            h1 PhyloPlot
            h4 Equal-angle
        .container
            .row.form#basic(style="display:block")
                .form-group
                    label
                        |Tree
                    textarea#ts.form-control(rows="5", autofocus type='text',placeholder='In Newick format')
                .form-group
                    label
                        |Label colors (optional)
                    input#tc.form-control(type='text')
                .form-group
                    label
                        |Label font-scale (optional)
                    input#tf.form-control(type='text')

                .form-group
                    label
                        input#eq(type='checkbox', checked)
                        |Ignore branch length
                .form
                    .form-group
                        a#ad Advanced options
                        textarea#op.form-control(rows="8", autofocus type='text', style="display:none")
                .form-group
                    button.btn.btn-primary(type='button',id='plot')
                        |Plot
                    button.btn.btn-default(type='button',id='clear')
                        |Clear
                    button.btn.btn-default(type='button',id='save')
                        |Download figure

                    a.pull-right#example Example
            .row
                #te.alert.alert-danger(style="display: none;")
                    |Invalid tree.
                #tp

        script(src='../js/jquery-2.1.1.min.js')
        script(src='../js/d3.min.js',type="text/javascript")
        script(src='../js/FileSaver.min.js',type="text/javascript")
        script(src="../coffee/tree.js",type="text/javascript")
        script(src="../coffee/eqplot.js",type="text/javascript")
